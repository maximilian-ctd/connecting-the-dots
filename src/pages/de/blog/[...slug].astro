---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getTranslations } from '../../../i18n/translations';
import { getCollection } from 'astro:content';

const lang = 'de';
const t = getTranslations(lang);

export async function getStaticPaths() {
	const posts = await getCollection('blog', ({ data }) => data.lang === 'de');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: { post },
	}));
}

const { post } = Astro.props;
const currentPath = `/de/blog/${post.slug}`;
---

<Layout 
	title={`${post.data.title} - Blog - ConnectingTheDots`}
	description={post.data.description}
	lang={lang}
	currentPath={currentPath}
	image={post.data.heroImage}
>
	<Header lang={lang} currentPath={currentPath} />
	<main class="bg-white">
		<!-- Hero Section -->
		{post.data.heroImage && (
			<section class="relative h-64 md:h-96 overflow-hidden">
				<img
					src={post.data.heroImage}
					alt={post.data.title}
					class="absolute inset-0 w-full h-full object-cover"
					loading="eager"
				/>
				<div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
			</section>
		)}
		
		<!-- Article Content -->
		<article class="max-w-4xl mx-auto px-4 py-12">
			<!-- Header -->
			<header class="mb-8">
				<div class="flex items-center gap-3 mb-4">
					<span class="px-3 py-1 bg-accent/10 text-accent rounded-full text-sm font-medium">
						{t.blog.category[post.data.category]}
					</span>
					{post.data.tags.map((tag) => (
						<span class="px-3 py-1 bg-secondary/30 text-muted-foreground rounded-full text-sm">
							{tag}
						</span>
					))}
				</div>
				<h1 class="text-4xl lg:text-5xl font-bold mb-4 text-foreground">
					{post.data.title}
				</h1>
				<div class="flex items-center gap-4 text-muted-foreground text-sm">
					<span>
						{t.blog.publishedOn} {post.data.pubDate.toLocaleDateString('de-DE', { 
							year: 'numeric', 
							month: 'long', 
							day: 'numeric' 
						})}
					</span>
					{post.data.updatedDate && (
						<span>
							{t.blog.updatedOn} {post.data.updatedDate.toLocaleDateString('de-DE', { 
								year: 'numeric', 
								month: 'long', 
								day: 'numeric' 
							})}
						</span>
					)}
					<span>â€¢</span>
					<span>{post.data.author}</span>
				</div>
			</header>

			<!-- Content -->
			<div class="prose prose-lg max-w-none">
				<slot />
			</div>

			<!-- Back Link -->
			<div class="mt-12 pt-8 border-t border-accent/20">
				<a 
					href="/de/blog"
					class="inline-flex items-center gap-2 text-accent hover:text-accent/80 font-medium transition-colors"
				>
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
					</svg>
					{t.blog.backToBlog}
				</a>
			</div>
		</article>
	</main>
	<Footer lang={lang} currentPath={currentPath} />
</Layout>

