---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getTranslations } from '../../i18n/translations';

const lang = 'de';
const currentPath = '/de/unser-team';
const t = getTranslations(lang);
---

<Layout 
	title="Unser Team - ConnectingTheDots" 
	description="Lernen Sie unser Team kennen: Maximilian Rebensburg und Juliane Kissau. Expertise in Digitalisierung, E-Commerce und Marktplatzstrategien."
	lang={lang}
	currentPath={currentPath}
>
	<Header lang={lang} currentPath={currentPath} />
	<main class="bg-white">
		<!-- Hero Section -->
		<section class="bg-gradient-to-br from-white via-secondary/30 to-white py-12 px-4 relative overflow-hidden">
			<div class="absolute inset-0 opacity-20">
				<div class="absolute inset-0" style="background-image: radial-gradient(circle at 20% 30%, rgba(123, 224, 183, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(123, 224, 183, 0.1) 0%, transparent 50%);"></div>
			</div>
			<div class="max-w-7xl mx-auto relative z-10">
				<div class="text-center mb-8">
					<h1 class="text-4xl lg:text-5xl font-bold mb-6">{t.aboutUs.title}</h1>
					<!-- Team Mission -->
					<div class="max-w-3xl mx-auto">
						<div class="bg-white/80 backdrop-blur rounded-2xl p-6 lg:p-8 shadow-sm transition-all duration-300 hover:scale-105 hover:shadow-lg hover:bg-white/90">
							<p class="text-xl lg:text-2xl font-medium leading-relaxed transition-colors duration-300" style="color: #8BE4C0;">
								{t.aboutUs.teamMission}
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Team Members -->
		<section class="bg-white py-12 px-4">
			<div class="max-w-7xl mx-auto space-y-16">
				<!-- Maximilian Rebensburg -->
				<div class="flex flex-col lg:flex-row gap-8 items-start">
					<!-- Left: Image & Profile -->
					<div class="w-full lg:w-1/3 flex-shrink-0">
						<div class="bg-white border border-accent/20 rounded-3xl shadow-lg overflow-hidden">
							<!-- Image -->
							<div class="relative h-[400px]">
								<img
									src="/images/maximilian_bild.jpeg"
									alt="Maximilian, Senior Consultant – Strategy & Market Validation bei ConnectingTheDots"
									class="absolute inset-0 w-full h-full object-cover"
									loading="eager"
								/>
							</div>
							<!-- Content -->
							<div class="p-6">
								<div class="space-y-3 mb-6">
									<h2 class="text-2xl font-bold text-foreground">{t.aboutUs.maximilian.heading}</h2>
									<p class="text-lg text-muted-foreground font-medium">{t.aboutUs.maximilian.intro}</p>
								</div>
								<a 
									href={t.aboutUs.maximilian.linkedinUrl}
									target="_blank" 
									rel="noopener noreferrer"
									class="inline-flex items-center gap-2 px-5 py-2.5 bg-accent text-accent-foreground rounded-xl hover:bg-accent/90 transition-all shadow-sm hover:shadow-md text-sm"
								>
									<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
										<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
									</svg>
									<span class="font-medium">{t.aboutUs.maximilian.linkedin}</span>
								</a>
							</div>
						</div>
					</div>
					<!-- Right: Experience & Mission -->
					<div class="flex-1">
						<div class="bg-secondary/30 backdrop-blur rounded-3xl p-8 lg:p-10 border border-accent/10 shadow-sm">
							<div class="space-y-6">
								<div class="flex items-center gap-3 mb-6">
									<div class="w-1 h-12 bg-accent rounded-full"></div>
									<h2 class="text-2xl font-bold text-foreground">{t.aboutUs.maximilian.experience.title}</h2>
								</div>
								<div class="space-y-4 text-muted-foreground leading-relaxed">
									<p>{t.aboutUs.maximilian.experience.paragraph1}</p>
									<p>{t.aboutUs.maximilian.experience.paragraph2}</p>
									{t.aboutUs.maximilian.experience.paragraph3 && <p>{t.aboutUs.maximilian.experience.paragraph3}</p>}
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Juliane Kissau -->
				<div class="flex flex-col lg:flex-row gap-8 items-start">
					<!-- Left: Image & Profile -->
					<div class="w-full lg:w-1/3 flex-shrink-0">
						<div class="bg-white border border-accent/20 rounded-3xl shadow-lg overflow-hidden">
							<!-- Image -->
							<div class="relative h-[400px] overflow-hidden">
								<img
									src="/images/Jule3.jpeg"
									alt="Juliane Kissau, Senior Consultant – Brand, Commerce & Integration bei ConnectingTheDots"
									class="absolute inset-0 w-full h-full object-cover object-top"
									style="object-position: top; transform: scale(1.3);"
									loading="eager"
								/>
							</div>
							<!-- Content -->
							<div class="p-6">
								<div class="space-y-3 mb-6">
									<h2 class="text-2xl font-bold text-foreground">{t.aboutUs.juliane.heading}</h2>
									<p class="text-lg text-muted-foreground font-medium">{t.aboutUs.juliane.intro}</p>
								</div>
								<a 
									href={t.aboutUs.juliane.linkedinUrl}
									target="_blank" 
									rel="noopener noreferrer"
									class="inline-flex items-center gap-2 px-5 py-2.5 bg-accent text-accent-foreground rounded-xl hover:bg-accent/90 transition-all shadow-sm hover:shadow-md text-sm"
								>
									<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
										<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
									</svg>
									<span class="font-medium">{t.aboutUs.juliane.linkedin}</span>
								</a>
							</div>
						</div>
					</div>
					<!-- Right: Experience -->
					<div class="flex-1 space-y-6">
						<!-- Experience Section -->
						<div class="bg-secondary/30 backdrop-blur rounded-3xl p-8 lg:p-10 border border-accent/10 shadow-sm">
							<div class="space-y-6">
								<div class="flex items-center gap-3 mb-6">
									<div class="w-1 h-12 bg-accent rounded-full"></div>
									<h2 class="text-2xl font-bold text-foreground">{t.aboutUs.juliane.experience.title}</h2>
								</div>
								<div class="space-y-4 text-muted-foreground leading-relaxed">
									<p>{t.aboutUs.juliane.experience.paragraph1}</p>
									{t.aboutUs.juliane.experience.paragraph2 && <p>{t.aboutUs.juliane.experience.paragraph2}</p>}
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Ella -->
				<div class="flex flex-col lg:flex-row gap-8 items-start">
					<!-- Left: Image & Profile -->
					<div class="w-full lg:w-1/3 flex-shrink-0">
						<div class="bg-white border border-accent/20 rounded-3xl shadow-lg overflow-hidden">
							<!-- Image -->
							<div class="relative h-[400px]">
								<img
									src="/images/Ella2.jpeg"
									alt="Ella, Junior Feelgood Manager bei ConnectingTheDots"
									class="absolute inset-0 w-full h-full object-cover"
									loading="eager"
								/>
							</div>
							<!-- Content -->
							<div class="p-6">
								<div class="space-y-3 mb-6">
									<h2 class="text-2xl font-bold text-foreground">{t.aboutUs.ella.heading}</h2>
									<p class="text-lg text-muted-foreground font-medium">{t.aboutUs.ella.intro}</p>
								</div>
							</div>
						</div>
					</div>
					<!-- Right: Description -->
					<div class="flex-1">
						<div class="bg-secondary/30 backdrop-blur rounded-3xl p-8 lg:p-10 border border-accent/10 shadow-sm">
							<div class="space-y-6">
								<div class="space-y-4 text-muted-foreground leading-relaxed">
									<p>{t.aboutUs.ella.description}</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer lang={lang} currentPath={currentPath} />
</Layout>
