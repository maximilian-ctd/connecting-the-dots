---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Willkommen auf meiner Website">
	<main>
		<section class="hero">
			<div class="container">
				<h1>Willkommen auf meiner Website</h1>
				<p class="subtitle">Erstellt mit Astro</p>
				<a href="#about" class="cta-button">Mehr erfahren</a>
			</div>
		</section>

		<section id="about" class="about">
			<div class="container">
				<h2>Ãœber diese Website</h2>
				<p>
					Dies ist eine moderne Website, die mit Astro erstellt wurde. 
					Sie ist schnell, SEO-freundlich und einfach zu erweitern.
				</p>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		min-height: 100vh;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 100vh;
		text-align: center;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	}

	.hero h1 {
		font-size: 4rem;
		margin: 0 0 1rem 0;
		font-weight: 700;
	}

	.subtitle {
		font-size: 1.5rem;
		margin: 0 0 2rem 0;
		opacity: 0.9;
	}

	.cta-button {
		display: inline-block;
		padding: 1rem 2rem;
		background: #fff;
		color: #667eea;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 600;
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.cta-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
	}

	.about {
		padding: 4rem 0;
		background: #1a1d24;
	}

	.about h2 {
		font-size: 2.5rem;
		margin: 0 0 1.5rem 0;
		text-align: center;
	}

	.about p {
		font-size: 1.2rem;
		line-height: 1.8;
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
		opacity: 0.9;
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2.5rem;
		}

		.subtitle {
			font-size: 1.2rem;
		}
	}
</style>

