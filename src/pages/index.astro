---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import CustomerReferences from '../components/CustomerReferences.astro';
import ValueProposition from '../components/ValueProposition.astro';
import HowItWorks from '../components/HowItWorks.astro';
import ServicesNetwork from '../components/ServicesNetwork.astro';
import CaseStudy from '../components/CaseStudy.astro';
import LeadForm from '../components/LeadForm.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="ConnectingTheDots - Grow your business through new connections">
	<Header />
	<main>
		<HeroSection />
		<CustomerReferences />
		<ValueProposition />
		<HowItWorks />
		<ServicesNetwork />
		<CaseStudy />
		<LeadForm />
	</main>
	<Footer />
</Layout>

<style>
	main {
		min-height: 100vh;
	}

	.hero {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 100vh;
		text-align: center;
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		padding: var(--spacing-4xl) 0;
	}

	.hero h1 {
		margin-bottom: var(--spacing-md);
	}

	.subtitle {
		font-size: var(--font-size-xl);
		margin-bottom: var(--spacing-2xl);
		opacity: 0.9;
	}

	.about {
		padding: var(--spacing-4xl) 0;
		background: var(--color-bg-secondary);
	}

	.about h2 {
		margin-bottom: var(--spacing-lg);
		text-align: center;
	}

	.about p {
		font-size: var(--font-size-lg);
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
		opacity: 0.9;
	}
</style>

