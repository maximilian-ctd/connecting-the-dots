---
import { getTranslations, type Language } from '../i18n/translations';
import leadFormScript from '../scripts/leadForm.ts?url';

interface Props {
  lang?: Language;
}

const { lang = 'de' } = Astro.props;
const t = getTranslations(lang);
const consentLabel = t.leadForm.consentLabel;
---

<section id="contact" class="bg-secondary py-20 px-4 relative overflow-hidden">
  <!-- Connecting dots background -->
  <div class="absolute inset-0 opacity-20">
    <!-- ConnectingDots Hintergrund-Effekt -->
  </div>

  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center mb-16">
      <h2 
        id="lead-form-title"
        class="text-3xl lg:text-4xl mb-6"
      >
        {t.leadForm.title}
      </h2>
      <p 
        id="lead-form-subtitle"
        class="text-lg text-muted-foreground max-w-2xl mx-auto"
      >
        {t.leadForm.subtitle}
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Form -->
      <div id="lead-form-card" style="opacity: 1 !important; transform: none !important; visibility: visible !important;">
        <div class="bg-white border-0 shadow-sm rounded-2xl hover:shadow-xl transition-shadow">
          <div class="px-6 pt-6 pb-4">
            <h3 class="text-2xl font-semibold">{t.leadForm.getStarted}</h3>
          </div>
          <div class="px-6 pb-6 space-y-6">
            <form 
              id="contact-form" 
              name="contact" 
              method="POST" 
              data-netlify="true" 
              netlify-honeypot="bot-field"
              class="space-y-6" 
            data-lang={lang}
              data-success-title={t.leadForm.successTitle}
              data-success-message={t.leadForm.successMessage}
              data-error-message={t.leadForm.errorMessage}
            >
              <!-- Hidden field for Netlify Forms -->
              <input type="hidden" name="form-name" value="contact" />
              <!-- Honeypot field for spam protection -->
              <p class="hidden">
                <label>
                  Don't fill this out if you're human: <input name="bot-field" />
                </label>
              </p>
              <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                  <label for="firstName" class="text-sm font-medium leading-none block">{t.leadForm.firstName}</label>
                  <input 
                    id="firstName" 
                    name="firstName"
                    type="text"
                    placeholder="John"
                    class="rounded-xl border border-border h-9 w-full min-w-0 px-3 py-1 text-base bg-input-background transition-[color,box-shadow] outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] placeholder:text-muted-foreground"
                    required
                  />
                </div>
                <div class="space-y-2">
                  <label for="lastName" class="text-sm font-medium leading-none block">{t.leadForm.lastName}</label>
                  <input 
                    id="lastName" 
                    name="lastName"
                    type="text"
                    placeholder="Doe"
                    class="rounded-xl border border-border h-9 w-full min-w-0 px-3 py-1 text-base bg-input-background transition-[color,box-shadow] outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] placeholder:text-muted-foreground"
                    required
                  />
                </div>
              </div>
              
              <div class="space-y-2">
                <label for="company" class="text-sm font-medium leading-none block">{t.leadForm.company}</label>
                <input 
                  id="company" 
                  name="company"
                  type="text"
                  placeholder="Your Company Name"
                  class="rounded-xl border border-border h-9 w-full min-w-0 px-3 py-1 text-base bg-input-background transition-[color,box-shadow] outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] placeholder:text-muted-foreground"
                  required
                />
              </div>
              
              <div class="space-y-2">
                <label for="email" class="text-sm font-medium leading-none block">{t.leadForm.email}</label>
                <input 
                  id="email" 
                  name="email"
                  type="email"
                  placeholder="john@company.com"
                  class="rounded-xl border border-border h-9 w-full min-w-0 px-3 py-1 text-base bg-input-background transition-[color,box-shadow] outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] placeholder:text-muted-foreground"
                  required
                />
              </div>
              
              <div class="space-y-2">
                <label for="goals" class="text-sm font-medium leading-none block">{t.leadForm.goals}</label>
                <textarea 
                  id="goals"
                  name="goals"
                  placeholder={t.leadForm.goalsPlaceholder}
                  class="rounded-xl border border-border resize-none w-full min-h-24 px-3 py-2 text-base bg-input-background transition-[color,box-shadow] outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] placeholder:text-muted-foreground"
                  required
                ></textarea>
              </div>
              
              <div class="flex items-start space-x-3">
                <input 
                  id="consent" 
                  name="consent"
                  type="checkbox" 
                  class="mt-1 w-4 h-4 rounded border-border text-accent focus:ring-accent focus:ring-2"
                  required
                />
                <label for="consent" class="text-sm text-muted-foreground leading-relaxed">
                  {consentLabel.prefix}
                  <a href={consentLabel.linkHref} class="text-primary underline" rel="noopener noreferrer">
                    {consentLabel.linkText}
                  </a>
                  {consentLabel.suffix}
                </label>
              </div>
              
              <button 
                type="submit"
                class="relative w-full overflow-hidden py-6 text-lg rounded-xl group inline-flex items-center justify-center text-accent-foreground bg-accent shadow-[0_22px_48px_rgba(123,224,183,0.35)] transition-all hover:-translate-y-[2px] hover:shadow-[0_30px_58px_rgba(123,224,183,0.4)] active:scale-[0.98] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/45"
              >
                <span class="absolute inset-[1.5px] rounded-[0.9rem] bg-accent"></span>
                <span class="absolute inset-0 rounded-xl border border-white/22"></span>
                <span class="pointer-events-none absolute inset-y-[8px] left-[10px] w-[2.5px] rounded-full bg-white/38 blur-[2px]"></span>
                <span class="pointer-events-none absolute inset-y-[8px] right-[10px] w-[2.5px] rounded-full bg-white/28 blur-[2px]"></span>
                <span class="relative inline-flex items-center">
                  {t.leadForm.submit}
                  <svg class="ml-2 h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <line x1="22" y1="2" x2="11" y2="13"></line>
                    <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                  </svg>
                </span>
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Benefits -->
      <div id="benefits-card">
        <div class="bg-white border-0 shadow-sm rounded-2xl hover:shadow-xl transition-shadow">
          <div class="px-6 pt-6 pb-4">
            <h3 class="text-2xl font-semibold">{t.leadForm.whatYouGet}</h3>
          </div>
          <div class="px-6 pb-6 space-y-6">
            <!-- Benefit 1 -->
            <div 
              class="benefit-item flex items-start gap-4 group"
              data-index="0"
            >
              <div class="check-icon">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="leading-relaxed">{t.leadForm.benefit1}</span>
            </div>

            <!-- Benefit 2 -->
            <div 
              class="benefit-item flex items-start gap-4 group"
              data-index="1"
            >
              <div class="check-icon">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="leading-relaxed">{t.leadForm.benefit2}</span>
            </div>

            <!-- Benefit 3 -->
            <div 
              class="benefit-item flex items-start gap-4 group"
              data-index="2"
            >
              <div class="check-icon">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="leading-relaxed">{t.leadForm.benefit3}</span>
            </div>

            <!-- Benefit 4 -->
            <div 
              class="benefit-item flex items-start gap-4 group"
              data-index="3"
            >
              <div class="check-icon">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="leading-relaxed">{t.leadForm.benefit4}</span>
            </div>

            <!-- Benefit 5 -->
            <div 
              class="benefit-item flex items-start gap-4 group"
              data-index="4"
            >
              <div class="check-icon">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="leading-relaxed">{t.leadForm.benefit5}</span>
            </div>
            
            <div class="bg-secondary p-6 rounded-xl mt-8">
              <h4 class="mb-3 font-semibold">{t.leadForm.timeline}</h4>
              <div class="space-y-2 text-sm text-muted-foreground">
                <div>• {t.leadForm.timeline1}</div>
                <div>• {t.leadForm.timeline2}</div>
                <div>• {t.leadForm.timeline3}</div>
                <div>• {t.leadForm.timeline4}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="module" src={leadFormScript}></script>

<style>
  /* Ensure form is visible by default - use high specificity */
  section#contact #lead-form-title,
  section#contact #lead-form-subtitle,
  section#contact #lead-form-card {
    opacity: 1 !important;
    transform: none !important;
    visibility: visible !important;
    display: block !important;
  }

  #benefits-card {
    /* Will be set by JavaScript */
  }

  .benefit-item {
    transition: transform 0.3s ease;
  }

  .check-icon {
    transition: transform 0.5s ease;
  }
</style>

