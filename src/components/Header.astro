---
// Header-Komponente f√ºr ConnectingTheDots
// Konvertiert von React zu Astro
---

<header class="bg-white/95 backdrop-blur-sm border-b border-border sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-20">
      <!-- Desktop Navigation - Left Side -->
      <nav class="hidden lg:flex items-center space-x-8 flex-1">
        <button
          type="button"
          onclick="scrollToSection('#how-it-works')"
          class="text-foreground hover:text-accent transition-colors cursor-pointer"
        >
          How it Works
        </button>
        <button
          type="button"
          onclick="scrollToSection('#services')"
          class="text-foreground hover:text-accent transition-colors cursor-pointer"
        >
          Services
        </button>
      </nav>

      <!-- Logo - Center -->
      <div class="flex items-center justify-center lg:mx-12">
        <a href="/" class="block">
          <img 
            src="/images/ec4100a9ee348248b3d6610eca2e5f813e8e2ff9.png" 
            alt="ConnectingTheDots Logo" 
            class="h-8 w-auto transition-all duration-300 hover:scale-110 hover:drop-shadow-[0_0_8px_rgba(123,224,183,0.6)] cursor-pointer"
          />
        </a>
      </div>

      <!-- Desktop Navigation - Right Side -->
      <nav class="hidden lg:flex items-center space-x-8 flex-1 justify-end">
        <button
          type="button"
          onclick="scrollToSection('#case-study')"
          class="text-foreground hover:text-accent transition-colors cursor-pointer"
        >
          Case Study
        </button>
        <a
          href="/faq"
          class="text-foreground hover:text-accent transition-colors cursor-pointer"
        >
          FAQ
        </a>
        <a
          href="#contact"
          onclick="scrollToSection('#contact')"
          class="bg-accent text-accent-foreground hover:bg-accent/90 rounded-xl px-4 py-2 transition-colors"
        >
          Book a Call
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        id="mobile-menu-button"
        class="lg:hidden p-2 ml-auto"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="lg:hidden border-t border-border hidden">
      <nav class="py-4 space-y-4">
        <button
          type="button"
          onclick="scrollToSection('#how-it-works'); toggleMobileMenu();"
          class="block w-full text-left py-2 text-foreground hover:text-accent transition-colors"
        >
          How it Works
        </button>
        <button
          type="button"
          onclick="scrollToSection('#services'); toggleMobileMenu();"
          class="block w-full text-left py-2 text-foreground hover:text-accent transition-colors"
        >
          Services
        </button>
        <button
          type="button"
          onclick="scrollToSection('#case-study'); toggleMobileMenu();"
          class="block w-full text-left py-2 text-foreground hover:text-accent transition-colors"
        >
          Case Study
        </button>
        <a
          href="/faq"
          class="block w-full text-left py-2 text-foreground hover:text-accent transition-colors"
        >
          FAQ
        </a>
        <div class="pt-4 space-y-3">
          <a
            href="#contact"
            onclick="scrollToSection('#contact'); toggleMobileMenu();"
            class="block w-full bg-accent text-accent-foreground hover:bg-accent/90 rounded-xl px-4 py-2 text-center transition-colors"
          >
            Book a Call
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  function scrollToSection(href) {
    const element = document.querySelector(href);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
    }
  }

  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    
    if (menu && menuIcon && closeIcon) {
      menu.classList.toggle('hidden');
      menuIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
    }
  }

  // Make functions available globally
  window.scrollToSection = scrollToSection;
  window.toggleMobileMenu = toggleMobileMenu;

  // Mobile menu button handler
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    if (button) {
      button.addEventListener('click', toggleMobileMenu);
    }
  });
</script>

