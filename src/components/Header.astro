---
// Header-Komponente für ConnectingTheDots
import LanguageSwitcher from './LanguageSwitcher.astro';
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang?: Language;
  currentPath?: string;
}

const { lang = 'de', currentPath = '/de' } = Astro.props;
const t = getTranslations(lang);
---

<header class="bg-white/35 backdrop-blur-2xl border-b border-white/20 sticky top-0 z-50 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-20">
      <!-- Desktop Navigation - Left Side -->
      <nav class="hidden lg:flex items-center space-x-8 flex-1">
        <button
          type="button"
          onclick="scrollToSection('#how-it-works')"
          class="text-foreground hover:text-accent transition-colors cursor-pointer"
        >
          {t.header.howItWorks}
        </button>
        <button
          type="button"
          onclick="scrollToSection('#services')"
          class="text-foreground hover:text-accent transition-colors cursor-pointer"
        >
          {t.header.services}
        </button>
      </nav>

      <!-- Logo - Center -->
      <div class="flex flex-1 items-center justify-start lg:justify-center lg:mx-12 lg:flex-none">
        <a
          href={`/${lang}/`}
          class="group block"
          aria-label="ConnectingTheDots Startseite"
        >
          <div class="flex-shrink-0 ml-0 lg:ml-0">
            <img
              src="/images/Logo_CTD.svg"
              alt="ConnectingTheDots Logo"
              class="h-12 sm:h-14 lg:h-16 w-auto object-contain brightness-110 contrast-110 transition duration-300 ease-out group-hover:scale-[1.02] group-hover:brightness-125 group-hover:contrast-120"
              style="filter: contrast(115%) saturate(110%);"
              loading="lazy"
            />
          </div>
        </a>
      </div>

      <!-- Desktop Navigation - Right Side -->
      <nav class="hidden lg:flex items-center space-x-4 flex-1 justify-end">
        <button
          type="button"
          onclick="scrollToSection('#case-study')"
          class="text-foreground hover:text-accent transition-colors cursor-pointer"
        >
          {t.header.caseStudy}
        </button>
        <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
        <a
          href="#contact"
          onclick="scrollToSection('#contact')"
          class="relative rounded-xl px-4 py-2 text-accent-foreground bg-accent shadow-[0_10px_20px_rgba(123,224,183,0.25)] transition-all hover:-translate-y-[1px] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/50 ml-4"
        >
          <span class="absolute inset-[1px] rounded-[0.75rem] bg-accent"></span>
          <span class="absolute inset-0 rounded-xl border border-white/20"></span>
          <span class="pointer-events-none absolute inset-y-[6px] left-[6px] w-[2px] rounded-full bg-white/38 blur-[1.5px]"></span>
          <span class="pointer-events-none absolute inset-y-[6px] right-[6px] w-[2px] rounded-full bg-white/30 blur-[1.5px]"></span>
          <span class="relative block px-1">{t.header.bookACall}</span>
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        id="mobile-menu-button"
        class="lg:hidden p-2 ml-auto"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="lg:hidden border-t border-border hidden">
      <nav class="py-4 space-y-4">
        <button
          type="button"
          onclick="scrollToSection('#how-it-works'); toggleMobileMenu();"
          class="block w-full text-left py-2 text-foreground hover:text-accent transition-colors"
        >
          {t.header.howItWorks}
        </button>
        <button
          type="button"
          onclick="scrollToSection('#services'); toggleMobileMenu();"
          class="block w-full text-left py-2 text-foreground hover:text-accent transition-colors"
        >
          {t.header.services}
        </button>
        <button
          type="button"
          onclick="scrollToSection('#case-study'); toggleMobileMenu();"
          class="block w-full text-left py-2 text-foreground hover:text-accent transition-colors"
        >
          {t.header.caseStudy}
        </button>
        <a
          href="/faq"
          class="block w-full text-left py-2 text-foreground hover:text-accent transition-colors"
        >
          {t.header.faq}
        </a>
        <div class="pt-4 space-y-3">
          <div class="flex items-center justify-between px-2 py-2">
            <span class="text-sm text-foreground/70">Language:</span>
            <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
          </div>
          <a
            href="#contact"
            onclick="scrollToSection('#contact'); toggleMobileMenu();"
            class="relative block w-full rounded-xl text-accent-foreground bg-accent px-4 py-2 text-center shadow-[0_10px_22px_rgba(123,224,183,0.25)] transition-all hover:-translate-y-[1px] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/50"
          >
            <span class="absolute inset-[1px] rounded-[0.75rem] bg-accent"></span>
            <span class="absolute inset-0 rounded-xl border border-white/18"></span>
            <span class="pointer-events-none absolute inset-y-[6px] left-[6px] w-[2px] rounded-full bg-white/35 blur-[1.5px]"></span>
            <span class="pointer-events-none absolute inset-y-[6px] right-[6px] w-[2px] rounded-full bg-white/28 blur-[1.5px]"></span>
            <span class="relative block px-1">{t.header.bookACall}</span>
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script is:inline>
  // Definiere Funktionen sofort im globalen Scope für onclick-Handler
  function scrollToSection(selector) {
    const element = document.querySelector(selector);
    if (element) {
      const headerHeight = 80; // Header-Höhe für Offset
      const elementPosition = element.getBoundingClientRect().top + window.pageYOffset;
      const offsetPosition = elementPosition - headerHeight;

      window.scrollTo({
        top: offsetPosition,
        behavior: 'smooth'
      });
    }
  }

  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    
    if (menu && menuIcon && closeIcon) {
      menu.classList.toggle('hidden');
      menuIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
    }
  }

  // Stelle sicher, dass die Funktionen global verfügbar sind
  window.scrollToSection = scrollToSection;
  window.toggleMobileMenu = toggleMobileMenu;

  // Mobile menu button handler
  function initMobileMenu() {
    const button = document.getElementById('mobile-menu-button');
    if (button) {
      button.addEventListener('click', toggleMobileMenu);
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }
</script>

