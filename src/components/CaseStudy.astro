---
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang?: Language;
}

const { lang = 'de' } = Astro.props;
const t = getTranslations(lang);
---

<section id="case-study" class="bg-white py-20 px-4 relative overflow-hidden">
  <!-- Subtle connecting dots background -->
  <div class="absolute inset-0 opacity-15">
    <!-- ConnectingDots Hintergrund-Effekt -->
  </div>

  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center mb-16">
      <h2 
        id="case-study-title"
        class="text-3xl lg:text-4xl mb-6 opacity-0"
      >
        {t.caseStudy.title}
      </h2>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Side: Content -->
      <div id="case-study-content" class="space-y-8 opacity-0">
        <div class="space-y-6">
          <h3 class="text-2xl">
            {t.caseStudy.heading}
          </h3>
          <p class="text-muted-foreground leading-relaxed">
            {t.caseStudy.description1}
          </p>
          <p class="text-muted-foreground leading-relaxed">
            {t.caseStudy.description2}
          </p>
        </div>
        
        <div class="grid grid-cols-3 gap-6">
          <!-- KPI 1: Discovery Calls -->
          <div class="kpi-card opacity-0" data-index="0">
            <div class="border border-accent/20 bg-white/60 backdrop-blur rounded-2xl hover:bg-accent/5 transition-colors relative overflow-hidden h-full shadow-sm">
              <div class="p-6 text-center relative z-10 flex flex-col items-center justify-center h-full min-h-[200px]">
                <div class="icon-wrapper mb-4 text-3xl text-accent">
                  üåê
                </div>
                <div class="kpi-value text-3xl font-semibold text-foreground mb-2">1 ‚Üí 4</div>
                <div class="text-sm text-muted-foreground">{t.caseStudy.kpi1}</div>
              </div>
            </div>
          </div>

          <!-- KPI 2: Qualified Sales Leads -->
          <div class="kpi-card opacity-0" data-index="1">
            <div class="border border-accent/20 bg-white/60 backdrop-blur rounded-2xl hover:bg-accent/5 transition-colors relative overflow-hidden h-full shadow-sm">
              <div class="p-6 text-center relative z-10 flex flex-col items-center justify-center h-full min-h-[200px]">
                <div class="icon-wrapper mb-4 text-3xl text-accent">
                  ü§ù
                </div>
                <div class="kpi-value text-3xl font-semibold text-foreground mb-2">4</div>
                <div class="text-sm text-muted-foreground">{t.caseStudy.kpi2}</div>
              </div>
            </div>
          </div>

          <!-- KPI 3: Customers with ARR -->
          <div class="kpi-card opacity-0" data-index="2">
            <div class="border border-accent/20 bg-white/60 backdrop-blur rounded-2xl hover:bg-accent/5 transition-colors relative overflow-hidden h-full shadow-sm">
              <div class="p-6 text-center relative z-10 flex flex-col items-center justify-center h-full min-h-[200px]">
                <div class="icon-wrapper mb-4 text-3xl text-accent">
                  üí∞
                </div>
                <div class="kpi-value text-3xl font-semibold text-foreground mb-2">+‚Ç¨1M</div>
                <div class="text-sm text-muted-foreground">{t.caseStudy.kpi3}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Side: Visual -->
      <div id="case-study-visual" class="opacity-0">
        <div class="relative rounded-3xl overflow-hidden h-[460px] bg-secondary/60 backdrop-blur">
          <img
            src="/images/andreas-skorski.jpg"
            alt="Andreas Skorski, CEO GenesysAI"
            class="absolute inset-0 h-full w-full object-cover object-top"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/35 to-transparent"></div>
          <div class="absolute bottom-6 left-6 right-6 text-white space-y-3">
            <p class="text-xs uppercase tracking-[0.3em] text-accent flex items-center gap-2">
              <span class="h-[6px] w-[6px] rounded-full bg-accent"></span>
              Andreas Skorski ¬∑ CEO, GenesysAI
            </p>
            <blockquote class="text-lg sm:text-xl leading-relaxed font-medium">
              "{t.caseStudy.testimonial}"
            </blockquote>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function initCaseStudy() {
    const title = document.getElementById('case-study-title');
    const subtitle = document.getElementById('case-study-subtitle');
    const content = document.getElementById('case-study-content');
    const visual = document.getElementById('case-study-visual');
    const kpiCards = document.querySelectorAll('.kpi-card');

    // Fade in title and subtitle
    if (title) {
      setTimeout(() => {
        title.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        title.style.opacity = '1';
        title.style.transform = 'translateY(0)';
      }, 100);
    }

    if (subtitle) {
      setTimeout(() => {
        subtitle.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        subtitle.style.opacity = '1';
        subtitle.style.transform = 'translateY(0)';
      }, 200);
    }

    // Intersection Observer f√ºr Content und Visual
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const element = entry.target as HTMLElement;
          
          if (element.id === 'case-study-content') {
            setTimeout(() => {
              element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
              element.style.opacity = '1';
              element.style.transform = 'translateX(0)';
            }, 300);
          } else if (element.id === 'case-study-visual') {
            setTimeout(() => {
              element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
              element.style.opacity = '1';
              element.style.transform = 'translateX(0)';
            }, 400);
          }
        }
      });
    }, observerOptions);

    if (content) {
      content.style.transform = 'translateX(-50px)';
      observer.observe(content);
    }

    if (visual) {
      visual.style.transform = 'translateX(50px)';
      observer.observe(visual);
    }

    // Animate KPI cards
    kpiCards.forEach((card, index) => {
      const cardEl = card as HTMLElement;
      const delay = index * 150;
      
      setTimeout(() => {
        cardEl.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        cardEl.style.opacity = '1';
        cardEl.style.transform = 'scale(1)';
      }, 600 + delay);

      // Hover effects
      cardEl.addEventListener('mouseenter', () => {
        cardEl.style.transform = 'translateY(-5px) scale(1.05)';
      });
      cardEl.addEventListener('mouseleave', () => {
        cardEl.style.transform = 'translateY(0) scale(1)';
      });

      // Icon rotation on hover
      const iconWrapper = cardEl.querySelector('.icon-wrapper');
      if (iconWrapper) {
        cardEl.addEventListener('mouseenter', () => {
          iconWrapper.style.transform = 'rotate(360deg)';
        });
        cardEl.addEventListener('mouseleave', () => {
          iconWrapper.style.transform = 'rotate(0deg)';
        });
      }

      // KPI value pulse animation
      const kpiValue = cardEl.querySelector('.kpi-value');
      if (kpiValue) {
        setInterval(() => {
          kpiValue.style.transform = 'scale(1)';
          setTimeout(() => {
            kpiValue.style.transition = 'transform 0.3s ease';
            kpiValue.style.transform = 'scale(1.05)';
            setTimeout(() => {
              kpiValue.style.transform = 'scale(1)';
            }, 300);
          }, 100);
        }, 2000 + index * 300);
      }
    });
  }

  // Entferne no-js Klasse falls vorhanden
  document.documentElement.classList.remove('no-js');

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCaseStudy);
  } else {
    initCaseStudy();
  }
</script>

<style>
  #case-study-title,
  #case-study-subtitle {
    transform: translateY(20px);
  }

  .kpi-card {
    transform: scale(0.8);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .icon-wrapper {
    transition: transform 0.6s ease;
  }

  .kpi-value {
    transition: transform 0.3s ease;
  }

  /* Fallback: Wenn JavaScript nicht l√§uft, zeige Content trotzdem */
  .no-js #case-study-title,
  .no-js #case-study-content,
  .no-js #case-study-visual,
  .no-js .kpi-card {
    opacity: 1 !important;
    transform: none !important;
  }
</style>
