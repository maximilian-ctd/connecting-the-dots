    opacity: 0.85;
    transition: opacity 0.3s ease, filter 0.3s ease;
  }

  .logo-card:hover .logo-img {
    opacity: 1;
    filter: grayscale(0);
  }

  /* Fallback: Wenn JavaScript nicht l채uft, zeige Content trotzdem */
  .no-js #customer-header {
    opacity: 1 !important;
    transform: none !important;
  }
  
  /* Sicherheitsfallback: Zeige Content auch wenn Skripte nicht ausgef체hrt werden */
  #customer-header {
    animation: fadeInFallback 0.1s ease 0.5s forwards;
  }
  
  @keyframes fadeInFallback {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>


