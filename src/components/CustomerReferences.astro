    border: 1px solid rgba(123, 224, 183, 0.2);
    border-radius: 1.25rem;
    padding: 1.25rem;
    box-shadow: 0 15px 35px -20px rgba(15, 23, 42, 0.35);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .logo-card:hover {
