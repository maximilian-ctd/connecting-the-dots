<script is:inline>
  (function() {
    'use strict';
    
    let scrollPosition = 0;
    let animationFrameId = null;
    let isAnimating = false;
    const scrollSpeed = 0.5;
    const cardWidth = 180;
    const gap = 32;
    const totalWidth = (cardWidth + gap) * 6;

    function initCustomerReferences() {
      document.documentElement.classList.remove('no-js');
      
      const header = document.getElementById('customer-header');
      const scrollContainer = document.getElementById('customer-scroll');
      
      if (!header || !scrollContainer) {
        setTimeout(initCustomerReferences, 100);
        return;
      }

      // Fade in header
      setTimeout(() => {
        header.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        header.style.opacity = '1';
        header.style.transform = 'translateY(0)';
      }, 100);

      // Setup scroll container
      scrollContainer.style.transition = 'none';
      scrollContainer.style.willChange = 'transform';
      scrollContainer.style.display = 'flex';
      scrollPosition = 0;
      scrollContainer.style.transform = 'translateX(0px)';

      // Start animation
      function startAnimation() {
        if (isAnimating) return;
        isAnimating = true;
        animateScroll();
      }

      function animateScroll() {
        if (!isAnimating) {
          if (animationFrameId) {
            cancelAnimationFrame(animationFrameId);
            animationFrameId = null;
          }
          return;
        }
        
        const container = document.getElementById('customer-scroll');
        if (!container) {
          isAnimating = false;
          return;
        }
        
        scrollPosition -= scrollSpeed;
        
        if (Math.abs(scrollPosition) >= totalWidth) {
          scrollPosition = 0;
        }
        
        container.style.transform = 'translateX(' + scrollPosition + 'px)';
        animationFrameId = requestAnimationFrame(animateScroll);
      }

      // Start animation
      setTimeout(startAnimation, 600);
    }

    // Initialize
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initCustomerReferences);
    } else {
      setTimeout(initCustomerReferences, 100);
    }
  })();
</script>

<style>
  #customer-header {
    transform: translateY(20px);
  }

  #customer-scroll {
    will-change: transform;
    /* Keine Transition f체r transform, damit die Animation funktioniert */
    transition: none !important;
  }

  .logo-card {
