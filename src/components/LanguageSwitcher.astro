---
// Language Switcher Component
import { getAlternateLanguage, getPathForLanguage } from '../i18n/utils';

interface Props {
  currentLang: 'de' | 'en';
  currentPath: string;
}

const { currentLang, currentPath } = Astro.props;
const alternateLang = getAlternateLanguage(currentLang);
const alternatePath = getPathForLanguage(alternateLang, currentPath);
const currentPathDE = getPathForLanguage('de', currentPath);
const currentPathEN = getPathForLanguage('en', currentPath);
---

<div class="language-switcher flex items-center gap-1">
  <a
    href={currentPathDE}
    class={`px-2 py-1 rounded text-xs sm:text-sm font-medium transition-colors ${
      currentLang === 'de'
        ? 'bg-accent/20 text-accent font-semibold'
        : 'text-foreground/70 hover:text-accent'
    }`}
    aria-label="Deutsch"
  >
    DE
  </a>
  <span class="text-foreground/30">|</span>
  <a
    href={currentPathEN}
    class={`px-2 py-1 rounded text-xs sm:text-sm font-medium transition-colors ${
      currentLang === 'en'
        ? 'bg-accent/20 text-accent font-semibold'
        : 'text-foreground/70 hover:text-accent'
    }`}
    aria-label="English"
  >
    EN
  </a>
</div>

<style>
  .language-switcher a {
    text-decoration: none;
  }
</style>

